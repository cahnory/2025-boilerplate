{
  "name": "2025-boilerplate",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "engines": {
    "pnpm": "^10.0.0"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*"
    ]
  },
  "scripts": {
    "check": "pnpm check:commits && pnpm check:rebase",
    "check:commits": "bash scripts/check-commits.sh $npm_package_config_baseBranch",
    "check:rebase": "bash scripts/check-rebase.sh $npm_package_config_baseBranch",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    },
    "baseBranch": "main"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/cz-commitlint": "^19.8.0",
    "commitizen": "^4.3.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  }
}
